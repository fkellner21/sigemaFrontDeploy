server {
    listen 80;
    server_name _;

    root /usr/share/nginx/html;
    index index.html index.htm;

    location / {
        try_files $uri $uri/ /index.html;
    }

    # Proxy opcional si el back est√° en otra URL interna
    # location /api/ {
    #     proxy_pass http://backend:8080/;
    # }
}
